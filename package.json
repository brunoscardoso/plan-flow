{
  "name": "planflow-ai",
  "version": "1.0.2",
  "description": "Structured AI-assisted development workflows for discovery, planning, execution, code reviews, and testing",
  "type": "module",
  "main": "dist/cli/index.js",
  "bin": {
    "planflow-ai": "./dist/cli/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brunoscardoso/plan-flow.git"
  },
  "homepage": "https://github.com/brunoscardoso/plan-flow#readme",
  "bugs": {
    "url": "https://github.com/brunoscardoso/plan-flow/issues"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli/index.js",
    "dev": "tsx src/cli/index.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist/",
    ".claude/commands/",
    ".claude/rules/",
    "rules/",
    "skills/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "ai",
    "cursor",
    "claude",
    "openclaw",
    "codex",
    "code-review",
    "planning",
    "development",
    "structured-development",
    "workflow",
    "ai-assisted"
  ],
  "author": "Bruno Cardoso",
  "license": "MIT",
  "dependencies": {
    "commander": "^14.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  }
}
